<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DanceSchool.Ui.App"
             xmlns:local="using:DanceSchool.Ui"
             xmlns:themes="clr-namespace:ShadUI;assembly=ShadUI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
     <Application.Resources>
         <FontFamily x:Key="LucideIcon">avares://DanceSchool.Ui/Assets/Fonts#lucide</FontFamily>
     </Application.Resources>
             
     <Application.Styles>
         <themes:ShadTheme />
         <StyleInclude Source="avares://DanceSchool.Ui/Styles/Index.axaml" />
     </Application.Styles>
</Application>