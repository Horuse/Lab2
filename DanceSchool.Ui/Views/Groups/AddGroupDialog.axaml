<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
             xmlns:vm="using:DanceSchool.Ui.ViewModels.Groups"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="DanceSchool.Ui.Views.Groups.AddGroupDialog"
             x:DataType="vm:AddGroupViewModel">

    <StackPanel Spacing="24" Margin="24">
        <!-- Header -->
        <StackPanel Spacing="8">
            <TextBlock Text="Додати групу" Classes="h3" FontWeight="Bold" />
            <TextBlock Text="Заповніть дані нової групи" Classes="Small Muted" />
        </StackPanel>
        
        <!-- Form Fields -->
        <StackPanel Spacing="16">
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding Name, Mode=TwoWay}"
                Watermark="Введіть назву групи"
                Width="300"
                shadui:ControlAssist.Label="Назва групи" />
            
            <ComboBox
                ItemsSource="{x:Static vm:AddGroupViewModel.AgeCategories}"
                SelectedItem="{Binding AgeCategory, Mode=TwoWay}"
                Width="300"
                shadui:ControlAssist.Label="Вікова категорія" />
            
            <ComboBox
                ItemsSource="{x:Static vm:AddGroupViewModel.SkillLevels}"
                SelectedItem="{Binding SkillLevel, Mode=TwoWay}"
                Width="300"
                shadui:ControlAssist.Label="Рівень навичок" />
            
            <NumericUpDown
                Value="{Binding MaxCapacity, Mode=TwoWay}"
                Minimum="1"
                Maximum="50"
                Width="300"
                shadui:ControlAssist.Label="Максимальна кількість учасників" />
            
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding Schedule, Mode=TwoWay}"
                Watermark="Пн, Ср, Пт 18:00"
                Width="300"
                shadui:ControlAssist.Label="Розклад" />
        </StackPanel>
        
        <!-- Footer with buttons -->
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Classes="Outline" Command="{Binding CancelCommand}">
                <shadui:ButtonAssist.Icon>
                    <TextBlock Classes="LucideIcon" Text="&#57741;" Margin="0,0,6,0" />
                </shadui:ButtonAssist.Icon>
                Скасувати
            </Button>
            <Button Classes="Primary" Command="{Binding SubmitCommand}">
                <shadui:ButtonAssist.Icon>
                    <TextBlock Classes="LucideIcon" Text="&#57665;" Margin="0,0,6,0" />
                </shadui:ButtonAssist.Icon>
                Додати
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>