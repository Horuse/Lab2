<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
             xmlns:vm="using:DanceSchool.Ui.ViewModels.Students"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="DanceSchool.Ui.Views.Students.AddStudentDialog"
             x:DataType="vm:AddStudentViewModel">

    <StackPanel Spacing="24" Margin="24">
        <StackPanel Spacing="8">
            <TextBlock Text="Додати студента" Classes="h3" FontWeight="Bold" />
            <TextBlock Text="Заповніть дані нового студента" Classes="Small Muted" />
        </StackPanel>
        
        <StackPanel Spacing="16">
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding FirstName, Mode=TwoWay}"
                Watermark="Введіть ім'я"
                Width="300"
                shadui:ControlAssist.Label="Ім'я" />
            
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding LastName, Mode=TwoWay}"
                Watermark="Введіть прізвище"
                Width="300"
                shadui:ControlAssist.Label="Прізвище" />
            
            <CalendarDatePicker
                SelectedDate="{Binding DateOfBirth, Mode=TwoWay}"
                Width="300"
                shadui:ControlAssist.Label="Дата народження" />
            
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding PhoneNumber, Mode=TwoWay}"
                Watermark="+380..."
                Width="300"
                shadui:ControlAssist.Label="Телефон" />
            
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding Email, Mode=TwoWay}"
                Watermark="student@example.com"
                Width="300"
                shadui:ControlAssist.Label="Email" />
            
            <ComboBox
                ItemsSource="{x:Static vm:AddStudentViewModel.SkillLevels}"
                SelectedItem="{Binding SkillLevel, Mode=TwoWay}"
                Width="300"
                shadui:ControlAssist.Label="Рівень навичок" />
        </StackPanel>
        
        <!-- Footer with buttons -->
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Classes="Outline" Command="{Binding CancelCommand}">Скасувати</Button>
            <Button Classes="Primary" Command="{Binding SubmitCommand}">Додати</Button>
        </StackPanel>
    </StackPanel>
</UserControl>